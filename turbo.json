{
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_VERCEL_URL"],
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^xata:generate"],
      "cache": false,
      "persistent": true
    },
    "xata:generate": {
      "cache": false
    }
  }
}

{
  "globalEnv": [
    "NODE_ENV",
    "KAFKA_BROKER",
    "KAFKA_USERNAME",
    "KAFKA_PASSWORD",
    "NEXT_PUBLIC_VERCEL_URL",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY"
  ],
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^xata:generate"],
      "cache": false,
      "persistent": true
    },
    "xata:generate": {
      "cache": false
    }
  }
}

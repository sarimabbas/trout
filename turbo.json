{
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_URL",
    "NEXT_PUBLIC_VERCEL_URL",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "PUSHER_APP_ID",
    "PUSHER_KEY",
    "PUSHER_SECRET",
    "QSTASH_TOKEN",
    "QSTASH_URL",
    "RESEND_API_KEY",
    "WAITLIST_ID",
    "WAITLIST_EMAIL",
    "WAITLIST_SECRET",
    "RUNTIME_ENV",
    "HEARTBEAT_WAITLIST_OFFBOARD"
  ],
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^xata:generate"],
      "cache": false,
      "persistent": true
    },
    "xata:generate": {
      "cache": false
    }
  }
}
